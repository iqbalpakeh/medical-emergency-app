<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_account_circle_black_36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/display_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Iqbal Pakeh"
                android:textColor="@color/text_secondary_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/message_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left"
                android:text="Hi, Hello World"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/address_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left"
                android:text="Jl. Raja Isa, No 1"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/timestamp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left"
                android:text="17 Dec 2017, 05.40 PM"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emergency_type_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left"
                android:text="Kecelakaan"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/picture_url_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="left"
                android:text="https://com.progremastudio.tbm/post/image.jpg"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
