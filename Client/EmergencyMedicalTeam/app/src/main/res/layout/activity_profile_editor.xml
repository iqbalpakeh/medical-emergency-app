<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_wallpaper" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_account_circle_black_120dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture_field"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_color="@color/cardview_dark_background"
                app:civ_border_width="2dp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <EditText
            android:id="@+id/display_name_field"
            android:layout_width="283dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="nama"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_secondary_dark" />

        <EditText
            android:id="@+id/phone_number_field"
            android:layout_width="283dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_text"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="nomor telepon"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/text_primary_dark"
            android:textColorHint="@color/text_secondary_dark" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="Ubah data diri"
            android:textColor="@color/text_primary_white"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>
