<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- this is just for better alignment-->
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_36dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/user_display_name_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iqbal Pakeh"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_message_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loren ipsum dolor sing amet"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/user_timestamp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_36dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_36dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/other_display_name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iqbal Pakeh"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/other_message_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loren ipsum dolor sing amet"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/other_timestamp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- this is just for better alignment-->
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_36dp"
            android:visibility="invisible"/>

    </LinearLayout>


</LinearLayout>